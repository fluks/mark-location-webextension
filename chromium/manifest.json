{
    "manifest_version": 2,
    "name": "Mark Location",
    "version": "0.2",
    "description": "__MSG_extensionDescription__",

    "default_locale": "en",

    "icons": {
        "16": "icons/mark_location_16.png",
        "32": "icons/mark_location_32.png",
        "48": "icons/mark_location_48.png",
        "128": "icons/mark_location_128.png"
    },

    "options_ui": {
        "page": "settings/settings.html"
    },

    "content_scripts": [
        {
            "matches": [ "*://*/*" ],
            "js": [ "content_scripts/location.js" ]
        }
    ],

    "browser_action": {
        "browser_style": true,
        "default_icon": "icons/mark_location_128.png",
        "default_title": "Mark Location",
        "default_popup": "browser_action/popup.html"
    },

    "background": {
        "scripts": [ "background/background.js" ]
    },

    "permissions": [
        "storage",
        "activeTab",
        "<all_urls>"
    ]
}
