{
    "env": {
        "browser": true,
        "webextensions": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "ignorePatterns": [ "doc/*", "common/browser-polyfill.js", "l10n/l10n.js", "common/idb.js" ],
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "globals": {
        "common": "readonly",
        "idb": "readonly"
    }
}
